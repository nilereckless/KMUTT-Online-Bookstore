    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>

    <body>
        <div class="back">
            <a href="/books" class="btn btn-info">Back</a>
        </div>
        <h1 class="text-center">Staff Management</h1> <br>
        <h2 class="text-center">Payment History</h2> <br>
        <% for(let i=0; i < payments.length; i++) { %>
            <div>

                <div>
                    <b>OrderID:</b><a href="/books/orderDetail/<%=payments[i].order_id%>" target="_blank">
                        <%= payments[i].order_id%>
                    </a>
                </div>
                <div>
                    <b>UserID:</b>
                    <%= payments[i].user_id%>
                </div>
                <div>
                    <b>Status:</b>
                    <%= payments[i].status%>
                </div>
                <div>
                    <b>Payment Option:</b>
                    <%= payments[i].payment_option%>
                </div>
                <div>
                    <b>Timestamp:</b>
                    <%= payments[i].created_at%>
                </div>
                <div>
                    <b>Tracking number:</b>
                    <input type="text" id="track-<%= payments[i].order_id%>">
                </div>
                <div>
                    <button class="approve btn-success" data-paymentID="<%= payments[i].order_id%>"> Approve </button>
                    <button class="decline btn-danger" id="decline" data-paymentID="<%= payments[i].order_id%>"> Decline </button>
                </div>
            </div>
            <% } %>
    </body>
    <% include ../layouts/footer.ejs %>
        <script>
            $(document).ready(function () {
                var approveButton = $(".approve")
                var declineButton = $(".decline")

                approveButton.on('click', function (e) {
                    var paymentID = $(this).attr("data-paymentID")
                    if ($('#track-' + paymentID).val().length <= 0) {
                        Swal.fire({
                            text: "Tracknumber can't be empty",
                            icon: 'warning',
                        })
                        return;
                    }
                    var settings = {
                        "url": "/books/payment",
                        "method": "POST",
                        "timeout": 0,
                        "headers": {
                            "Content-Type": "application/x-www-form-urlencoded",
                        },
                        "data": {
                            "paymentID": paymentID,
                            "status": "Approved",
                            "track_number": $('#track-' + paymentID).val()
                        }
                    };

                    $.ajax(settings)
                        .done(function (response) {
                            if (response == "success") {
                                Swal.fire({
                                    title: 'Approve Successfully',
                                    text: "You can insert another new book",
                                    icon: 'success',
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.reload();
                                    }
                                })
                            } else {
                                Swal.fire({
                                    title: 'Incomplete Approved',
                                    text: "test",
                                    icon: 'error',
                                })
                            }



                        });
                })
                declineButton.on('click', function (e) {
                    var paymentID = $(this).attr("data-paymentID")
                    var settings = {
                        "url": "/books/payment",
                        "method": "POST",
                        "timeout": 0,
                        "headers": {
                            "Content-Type": "application/x-www-form-urlencoded",
                        },
                        "data": {
                            "paymentID": paymentID,
                            "status": "Declined"
                        }
                    };

                    $.ajax(settings)
                        .done(function (response) {
                            if (response == "success") {
                                Swal.fire({
                                    title: 'Decline Successfully',
                                    icon: 'success',
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.reload();
                                    }
                                })
                            } else {
                                Swal.fire({
                                    title: 'Incomplete Declined',
                                    text: "test",
                                    icon: 'error',
                                })
                            }


                        });
                })
            });
        </script>

</html>