                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">BookName</th>
                                                <th scope="col">Author</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">ISBN</th>
                                                <th scope="col">Catagory</th>
                                                <th width="200px">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0; i < data.length; i++) { %>
