<!DOCTYPE html>
<html>

<head>
  <title>KMUTT Online Bookstore</title>

</head>
<% include layouts/header.ejs %>


  <body>
    <% include layouts/navbar.ejs %>
      <div class="container">
        <div class="jumbotron">
          <h1 class="display-4">King Mongkut's University of Technology Thonburi</h1>
          <p>KMUTT Online Bookstore</p>

        </div>
        <% if(messages.error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <% } %>
            <% if (user!=undefined) { %>
              <img src="<%= user._json.picture %> " alt="<%= user.displayName %>">
              <h2>Hello, <%= user.displayName %>.</h2>
              <% } %>

                <% if (user) { %>
                    <% if (staff.length > 0) { %> 
                  <a href="/books">Admin Organization</a> <br> <br>
                  <% } %> 
                  <a href="/logout">logout</a>
                  <% } else { %>
                    <a href="/auth/google">Signin</a>
                    <% } %>
      </div>
      <!-- promotion -->
      <div class="container">
        <div class="row">
          <div class="col-8">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="https://i.ibb.co/DCzm0Lt/create-shopping-sales-banners.jpg"
                    width="auto" height="300" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100"
                    src="https://i.ibb.co/99cxPLK/modern-sale-banner-colorful-comic-style-1361-1314.jpg" width="auto"
                    height="300" alt="Second slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <div class="col-4 type-2">
            <div class="row mx-0 pb-carousel">
              <div class="col-12 px-0">
                <div class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100"
                        src="https://i.ibb.co/fFW30wz/Portrait-of-a-ginger-cat-The-cat-in-the-medical-face-mask-respirator-outdoors-Medical-concept-Portra.jpg"
                        width="auto" height="138" alt="First slide">
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
            <div class="row mx-0 pt-carousel">
              <div class="col-12 px-0">
                <div class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">

                      <img class="d-block w-100"
                        src="https://i.ibb.co/NKkVPKS/A-small-dog-wears-a-face-mask-for-protection-against-forest-fire-smoke-in-Moscow-on-August-10-2010-T.jpg"
                        width="auto" height="138" alt="First slide">
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <!-- product -->
          <div class="container mb-5 mt-5">
            <div class="row">
              <h2>หนังสือมาใหม่/New book</h2>
            </div>
            <div class="row">
              <div class="col d-flex justify-content-end">
                <a href="/newbook" type="button" class="btn btn-success">View all</a>
              </div>
            </div>
            <div class="row">
              <!-- card1 -->
              <% for(let i=0; i < data.length; i++) { %>
                <div class="col-md-4">
                  <div class="card mt-3">
                    <div class="product-1 align-items-center p-2 text-center">
                      <img src="<%= data[i].imageUrl %>" alt="" class="rounded" width="160" height="220">
                      <h6>
                        <%= data[i].name %>
                      </h6>
                      <div align="center">ISBN : <%= data[i].isbn %>
                      </div><br>
                      <div align="center">Author : <%= data[i].author %>
                      </div>
                      <!-- card info -->

                      <!-- cost and star -->
                      <div class="cost mt-3 text-dark">
                        <span>
                          <%=data[i].price%> ฿
                        </span>
                        <!-- keep comment and stars in to database -->
                        <div class="start mt-3 align-items-center">
                          <i class="fa fa-star"></i>
                          <i class="fa fa-star"></i>
                          <i class="fa fa-star"></i>
                          <i class="fa fa-star"></i>
                          <i class="fa fa-star"></i>
                        </div>
                      </div>
                      <div>
                        <button class="btn btn-primary">add to cart</button><br>
                        <button class="btn btn-secondary">read more</button>
                      </div>
                    </div>

                  </div>

                </div>
                <% } %>
            </div>

          </div>




  </body>
  <% include layouts/footer.ejs %>





</html>