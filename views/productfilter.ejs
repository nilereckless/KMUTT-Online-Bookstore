<!DOCTYPE html>
<html lang="en">

<head>
    <title>KMUTT Online Bookstore</title>
</head>
<% include layouts/header.ejs %>

    <body>
        <% include layouts/navbar.ejs %>
            <% if(data.length < 1) { %>
                <p>ไม่พบหนังสือ</p>
                <% } else { %>
                    <div class="container mb-5 mt-5">
                        <div class="row">
                            <h2>ผลการค้นหา/Search Result</h2>
                        </div>
                        <div class="row">
                            <!-- card1 -->
                            <% for(let i=0; i < data.length; i++) { %>
                                <div class="col-md-4">
                                    <div class="card mt-3">
                                        <div class="product-1 align-items-center p-2 text-center">
                                            <img src="<%= data[i].imageUrl %>" alt="" class="rounded" width="160"
                                                height="220">
                                            <h6>
                                                <%= data[i].name %>
                                            </h6>
                                            <div align="center">ISBN : <%= data[i].isbn %>
                                            </div><br>
                                            <div align="center">Author : <%= data[i].author %>
                                            </div>
                                            <!-- card info -->

                                            <!-- cost and star -->
                                            <div class="cost mt-3 text-dark">
                                                <span>
                                                    <%=data[i].price%> ฿
                                                </span>
                                                <!-- keep comment and stars in to database -->
                                                <div class="start mt-3 align-items-center">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <button class="btn btn-primary">add to cart</button><br>
                                                <a href="/books/viewDetail/<%= data[i].id %>"
                                                    class="btn btn-secondary">read more</a>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <% } %>
                        </div>

                    </div>

                    <% } %>
    </body>
    <% include layouts/footer.ejs %>

</html>