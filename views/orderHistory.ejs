                <tr>
                    <th scope="row">
                        <b class="text-center">เลขคำสั่งซื้อของคุณ </b>
                        <%= orderbooks[i].order_id %> <br>
                    </th>
                    <td>
                        <b class="text-center"> ชื่อหนังสือ </b>
                        <%= orderbooks[i].book_name%> <br>
                    </td>
                    <td>
                        <b class="text-center">จำนวน</b>
                        <%= orderbooks[i].quantity %> <br>
                    </td>
                    <td>
                        <b class="text-center">ราคา</b>
                        <%= orderbooks[i].total_price %>
                    </td>
                </tr>
                <%}%>






    </body>
    <% include layouts/footer.ejs %>



</html>