<!DOCTYPE html>
<html lang="en">
<title>KMUTT Online Bookstore</title>

<head>
    <style>
        .slick-well {
            color: #fff;
            z-index: 100000;
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            display: flex;
            flex-direction: column;
            align-items: self-start;
            justify-content: center;
        }

        .slick-slide {
            position: relative;
        }
    </style>

</head>
<% include layouts/header.ejs %>

    <body>
        <% include layouts/navbar.ejs %>
            <!-- product -->
            <div class="container mb-5 mt-5">
                <div class="row">
                    <h2>หนังสือมาใหม่/New book</h2>
                </div>
                <div class="row">
                    <div class="container">
                        <div class="row mt-2 ml-0 slider slick-slider">
                            <% for(let i=0; i < data.length; i++) { %>
                                <div class="col slick-slide">

                                    <div class="book align-items-center p-2 text-center">
                                        <img src="<%= data[i].imageUrl %>" alt="" class="rounded" width="160"
                                            height="220">
                                        <h6>
                                            <%= data[i].name %>
                                        </h6>
                                        <div align="center">ISBN : <%= data[i].isbn %>
                                        </div><br>
                                        <div align="center">Author : <%= data[i].author %>
                                        </div>
                                        <!-- card info -->

                                        <!-- cost and star -->
                                        <div class="cost mt-3 text-dark">
                                            <span>
                                                <%=data[i].price%> ฿
                                            </span>
                                            <!-- keep comment and stars in to database -->
                                            <div class="start mt-3 align-items-center">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="btn btn-primary">add to cart</button><br>
                                            <a href="../books/viewDetail/<%= data[i].id %>" class="btn btn-secondary">read more</a>
                                        </div>
                                    </div>

                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>






    </body>
    <% include layouts/footer.ejs %>
        <script>
            $('.slider').slick({
                dots: true,
                slidesToShow: 4,
                slidesToScroll: 1,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 2000,
                responsive: [
                    {
                        breakpoint: 980, // tablet breakpoint
                        settings: {
                            slidesToShow: 3,
                            slidesToScroll: 3
                        }
                    },
                    {
                        breakpoint: 480, // mobile breakpoint
                        settings: {
                            slidesToShow: 2,
                            slidesToScroll: 2
                        }
                    }
                ]
            });

            $('.slider-brand').slick({
                slidesToShow: 1,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 8000,
                adaptiveHeight: true
            });
        </script>



</html>